
@{
    Layout = "_LayoutPokemon";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    @*<title>Index</title>*@
</head>
<body style="margin-top:5%">


    <h1 id="judul" class="text-black" style="text-align:center;margin-bottom:2%;">PokeDex</h1>


    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr style="text-align:center">
                <th scope="col">id</th>
                <th scope="col">Name</th>
                <th scope="col">Type</th>
                <th scope="col">Detail</th>
            </tr>
        </thead>
        <tbody id="listPoke" class="tbody-light" style="text-align:center;background-color:white">
        </tbody>
    </table>


    @*<div id="poke_container" class="poke-container"></div>*@

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" >
            <div class="modal-content">

                <div class="modal-body">
                    <div class="container-fluid">
                        <div class="row" style="margin-bottom:3%;margin-top:3%;">
                            <div class="col-12" id="namePoke">

                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6" id="imagePoke">

                            </div>
                            <div class="col-6">
                                <div class="row">
                                    <div id="descPoke" class="col-12" style="text-align: center; border-color: #f0f0f0; border-style: solid; border-width: 0px 0px 2px 0px; ">

                                    </div>
                                    <div  class="col-12" style="border-color: #ebebeb; border-style: solid; border-width: 0px 0px 2px 0px; ">
                                        <div class="row">
                                            <div class="col-3" style="margin-top:3%">
                                                Species :
                                            </div>
                                            <div id="speciesPoke" class="col-9" style="margin-top:3%;font-weight:800">

                                            </div>
                                        </div>
                                    </div>
                                    <div  class="col-12" style="border-color: #ebebeb; border-style: solid; border-width: 0px 0px 2px 0px; ">
                                        <div class="row">
                                            <div class="col-3" style="margin-top:3%">
                                                Height :
                                            </div>
                                            <div id="heightPoke" class="col-9" style="margin-top: 3%; font-weight: 800">

                                            </div>
                                        </div>
                                    </div>
                                    <div  class="col-12" style="border-color: #ebebeb; border-style: solid; border-width: 0px 0px 2px 0px; ">
                                        <div class="row">
                                            <div class="col-3" style="margin-top:3%">
                                                Weight :
                                            </div>
                                            <div id="weightPoke" class="col-9" style="margin-top: 3%; font-weight: 800">

                                            </div>
                                        </div>
                                    </div>
                                    <div  class="col-12" style="border-color: #ebebeb; border-style: solid; border-width: 0px 0px 2px 0px; ">
                                        <div class="row">
                                            <div class="col-3" style="line-height: 55px; ">
                                                Abilities :
                                            </div>
                                            <div id="AbilitiesPoke" class="col-9" style="margin-top: 3px; font-weight: 800 ">
                                                
                                            </div>
                                        </div>                                       
                                        
                                    </div>

                                    @*BASE STATS*@
                                    <div class="col-12">
                                        <h1 style="color:black; margin-top:6%;">Base Stats</h1>
                                    </div>
                                    @*<canvas id="marksChart" width="650" height="550"></canvas>*@

                                    <div class="col-12">
                                        <span>Health Point</span>
                                        <div class="progress">
                                            <div id="hpPoke" class="progress-bar progress-bar-striped progress-bar-animated bg-success" role="progressbar" aria-valuemin="0" aria-valuemax="100" style="font-size: medium"></div>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <span>Attack</span>
                                        <div class="progress">
                                            <div id="atkPoke" class="progress-bar progress-bar-striped progress-bar-animated bg-danger" role="progressbar" aria-valuemin="0" aria-valuemax="100" style="font-size: medium"></div>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <span>Defense</span>
                                        <div class="progress">
                                            <div id="defPoke" class="progress-bar progress-bar-striped progress-bar-animated bg-info" role="progressbar" aria-valuemin="0" aria-valuemax="100" style="font-size: medium"></div>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <span>Speed</span>
                                        <div class="progress">
                                            <div id="spdPoke" class="progress-bar progress-bar-striped progress-bar-animated bg-warning" role="progressbar" aria-valuemin="0" aria-valuemax="100" style="font-size: medium"></div>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <span>Special Attack</span>
                                        <div class="progress">
                                            <div id="spAtkPoke" class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuemin="0" aria-valuemax="100" style="background-color: blueviolet; font-size: medium"></div>
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        <span>Special Defense</span>
                                        <div class="progress">
                                            <div id="spDefPoke" class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuemin="0" aria-valuemax="100" style="background-color: brown;font-size:medium"></div>
                                        </div>
                                    </div>
                                    <div class="col-8" style="margin-top: 5%; text-align: right">
                                        <span>Total</span>
                                    </div>
                                    <div id="totalStatPoke" class="col-4" style="margin-top: 3%">

                                    </div>


                                </div>
                            </div>
                        </div>

                        @*evolution chain*@

                        <div class="row" style="border-color: #ebebeb; border-style: solid; border-width: 4px 0px 0px 0px;margin-top:5%;margin-bottom:2% ">
                            <div class="col-12">
                                <h1 style="color:black">Evolution Chain</h1>
                            </div>
                        </div>
                        <div class="row" style="margin-bottom:3%;margin-top:3%;">
                            <div class="col-1">
                                @*BLANK*@
                            </div>
                            <div class="col-2" id="pokeEvo1">
                                
                            </div>
                            <div class="col-2" id="pokeReqEvo2" style="text-align:center">

                            </div>
                            <div class="col-2" id="pokeEvo2">

                            </div>
                            <div class="col-2" id="pokeReqEvo3" style="text-align:center">

                            </div>
                            <div class="col-2" id="pokeEvo3">

                            </div>
                            <div class="col-1">
                                @*BLANK*@
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


</body>
</html>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
